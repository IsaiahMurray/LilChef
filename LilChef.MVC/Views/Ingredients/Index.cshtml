@model IEnumerable<LilChef.Data.Ingredient>

@{
    ViewBag.Title = "Index";
}

<h2>Ingredients</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div id="accordion">
    @*Alternatives*@
    <div class="card">
        <div class="card-header">
            <a class="category-link" data-toggle="collapse" href="#Alternatives-Category">
                Alternatives
            </a>
        </div>
        <div id="Alternatives-Category" class="collapse collapsing" data-parent="#accordion">
            @foreach (var item in Model)
            {
                if (item.Category == LilChef.Data.IngredientCategories.CategoryType.Alternatives)
                {
                    <div id="accordion">
                        <div class="card">
                            <div class="card-header">
                                <a class="card-link" data-toggle="collapse" href="#Alternatives">
                                    @Html.DisplayFor(modelItem => item.IngredientName)
                                </a>
                            </div>
                            <div id="Alternatives" class="collapse collapsing" data-parent="#accordion">
                                <div class="card-body">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </div>
                                <div class="links">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.IngredientId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.IngredientId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.IngredientId })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

